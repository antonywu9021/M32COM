			$("span[id^=dati_]").click(function () {
			    var id = $(this).attr("id").split("_")[1];
			    location.href = "/PhoneDaTi/Index?pid="+id;
			})
		});
        </script>
    </head>
    <body>
        <div class="top" style="border-bottom:2px solid #006c2e;">
            <img width="54px" height="53px" src="~/phone/img/logo.png" style="position: absolute; left:45%;">
            <div style="float:right;margin-right:10px;"><a href="/PhoneLogin/LoginOut">退出</a></div>
        </div>
        <div class="swiper-container">
            <div class="swiper-wrapper" style="position:relative;">
                <div class="swiper-slide" style="width:100%;">

                </div>
            </div>
        </div>
        <!-- banner图结束 -->

        <div class="prospecl">
            <div class="title"><i class="iconfont" style="font-size:20px;color:#ffc231;"></i>&nbsp;&nbsp;问卷调查</div>
            <ul class="protips" style="display: block;">
                @foreach (var mm in Model)
               {
                    <li><a href="/home/KaoShiMaxResult?id=@mm.ID" title="@mm.Title"><span>@(WebManager.DAConfig.ReplaceHtmlTag(mm.Title,18))</span></a>
                     @if (mm.LimitCnt > mm.cnt && mm.Etime<0)
                     {
                       <span id="dati_@mm.ID" style="border:1px solid #157b42; background:#157b42;color:#fff;border-radius:3px;padding:2px 2px">答题</span>
                     }
                     else
                     {
                        <span   style="border:1px solid #F72F2F; background:#F72F2F;color:#fff;border-radius:3px;padding:2px 2px">已结束</span>
                     }
                </li>
                }
            </ul>
        </div>
        <!-- 右侧菜单 -->
        <script src="~/phone/js/mui.min.js"></script>
    </body>
</html>
