@model WebModel.ShiJuan
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>无标题文档</title>
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/iconfont/css")
    @Scripts.Render("~/bundles/js")
    <link href="~/css/jedate.css" rel="stylesheet" />
    <script src="~/js/jquery.jedate.js"></script>
</head>
<body>
    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="#">试卷管理</a></li>
        </ul>
    </div>
    <div class="formbody">
        <div class="formtitle"><span>试卷管理</span></div>
        <form id="form1">
            <ul class="forminfo">
                @Html.Hidden("ID", Model.ID)
                <li><label>试卷名称<b>*</b></label><input id="Title" name="Title" type="text" class="dfinput" tag="empty" value="@Model.Title" msg="试卷名称" /><i></i></li>
                <li>
                    <label>
                        开始时间<b>*</b>
                    </label>
                    <input class="dfinput datainp" id="CreateTime" name="CreateTime" type="text" placeholder="" tag="empty" msg="开始时间" value="@(Model.CreateTime != DateTime.MinValue ? Model.CreateTime.ToString("yyyy-MM-dd HH:mm:ss") : DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss"))" readonly=readonly />
                </li>
                <li>
                    <label>
                        结束时间<b>*</b>
                    </label>
                    <input class="dfinput datainp" id="EndTime" name="EndTime" type="text" placeholder="" tag="empty" msg="结束时间" value="@(Model.EndTime != DateTime.MinValue ? Model.EndTime.ToString("yyyy-MM-dd HH:mm:ss") : DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss"))" readonly=readonly />
                </li>
                <li><label>允许作答时限<b>*</b></label><input id="LimitTime" name="LimitTime" type="text" class="dfinput" placeholder="例如60分钟，请填写 60 " tag="int" value="@Model.LimitTime" msg="作答时限" /><i>分钟</i></li>
                <li><label>允许作答次数<b>*</b></label><input id="LimitCnt" name="LimitCnt" type="text" class="dfinput" placeholder="例如最多允许作答5次，请填写 5 " tag="int" value="@Model.LimitCnt" msg="作答次数" /><i>次</i></li>
                <li><label>随机抽取题数<b>*</b></label><input id="RandomTiShu" name="RandomTiShu" type="text" class="dfinput" placeholder="例如随机抽取10道题，请填写 10 " tag="int" value="@Model.RandomTiShu" msg="抽取题数" /><i>道</i></li>
                <li style="height:58px"> 
                    <label>指派分组<b>*</b></label>
                    <div class="vocation">
                        <select id="FenZu" name="FenZu" class="select1">
                            <option value="1" @(Model.FenZu == 1 ? Html.Raw("selected='selected'") : Html.Raw(""))>默认</option>
                            <option value="2" @(Model.FenZu == 2 ? Html.Raw("selected='selected'") : Html.Raw(""))>B组</option>
                           
                        </select>
                        <i>*选择默认，只有A组能答题*</i>
                    </div>
                </li>
                <li><label>&nbsp;</label><input name="" type="button" id="savebtn" class="btn" value="确认保存" /><input name="" type="button" onclick="javascript:history.go(-1)" class="btnfanhui" value="返回" /></li>
            </ul>
        </form>
    </div>
</body>

</html>
<script type="text/javascript">
    $(".select1").uedSelect({
        width: 345
    });
    $("#CreateTime").jeDate({
        onClose: false,
        format: "YYYY-MM-DD hh:mm:ss",
        isTime: true
    });
    $("#EndTime").jeDate({
        onClose: false,
        format: "YYYY-MM-DD hh:mm:ss",
        isTime: true
    });
    $("#savebtn").click(function () {
        $.yanzheng("/ShiJuan/EditShiJuanForm", "#form1", "/ShiJuan/Index");
	})
</script>
