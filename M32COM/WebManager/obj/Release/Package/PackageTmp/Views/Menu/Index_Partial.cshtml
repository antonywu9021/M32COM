@model WebManager.MyPageInfo<WebModel.Menu>
@{
    var role = WebManager.DAConfig.GetButtonRole("Menu/Index");
}
<table class="tablelist">
    <thead>
        <tr>
           
            <th>序号</th>
            <th>菜单名称</th>
            <th>上级菜单</th>
            @*<th>图标ico</th>*@
            <th>连接地址</th>
            <th>排序</th>
            <th>创建时间</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mm in Model.List)
        {
            <tr>

                <td>@mm.ID</td>
                <td>@mm.Name</td>
                <td>@mm.PidName</td>
                @*<td>@mm.IcoInfo</td>*@
                <td>@mm.LinkUrl</td>
                <td>@mm.Sort</td>
                <td>@mm.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    @if (role.UserType == 0 || role.RoleDetail.Where(pp => pp.ButtonName.Contains("编辑")).Count() > 0)
                    {
                        <a href="/menu/editmenu?id=@mm.ID" class="tablelink" title="编辑"><i class="iconfont">&#xf014f;</i>编辑</a>
                    }
                    @if (role.UserType == 0 || role.RoleDetail.Where(pp => pp.ButtonName.Contains("删除")).Count() > 0)
                    {
                        <a onclick="$.del('/menu/delmenu?id=@mm.ID','/menu/index')" class="tablelink" title="删除"><i class="iconfont">&#xf029a;</i>删除</a>
                    }
                    @if (role.UserType == 0 || role.RoleDetail.Where(pp => pp.ButtonName.Contains("关联按钮")).Count() > 0)
                    {
                        if (mm.Pid != 0)
                        {
                            <a href="/Menu/MenuRelationButton?id=@mm.ID" class="tablelink" title="关联按钮"><i class="iconfont">&#xf010b;</i>关联按钮</a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PageLinks(Model.Page, m => "$.getpage('" + Model.Page.ReturnUrl + "','','#list')")
<script type="text/javascript">
    $('.tablelist tbody tr:odd').addClass('odd');
</script>



