@model WebManager.MyPageInfo<WebModel.Department>
@{
    var role = WebManager.DAConfig.GetButtonRole("Department/Index");
}
<table class="tablelist">
    <thead>
        <tr>
             
            <th>序号</th>
            <th>科室名称</th>
            <th>创建时间</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mm in Model.List)
        {
            <tr>

                <td>@mm.ID</td>
                <td>@mm.Name</td>
                <td>@mm.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    @if (role.UserType == 0 || role.RoleDetail.Where(pp => pp.ButtonName.Contains("编辑")).Count() > 0)
                    {
                        <a href="/Department/EditDepartment?id=@mm.ID" class="tablelink" title="编辑"><i class="iconfont">&#xf014f;</i>编辑</a>
                    }
                    @if (role.UserType == 0 || role.RoleDetail.Where(pp => pp.ButtonName.Contains("删除")).Count() > 0)
                    {
                        <a onclick="$.del('/Department/DelDepartment?id=@mm.ID','/Department/Index')" class="tablelink" title="删除"><i class="iconfont">&#xf029a;</i>删除</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PageLinks(Model.Page, m => "$.getpage('" + Model.Page.ReturnUrl + "','','#list')")
<script type="text/javascript">
$('.tablelist tbody tr:odd').addClass('odd');
</script>



