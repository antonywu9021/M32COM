@model WebManager.MyPageInfo<WebModel.User>
@{
    var userType = WebManager.DAConfig.MyUser().UserType;
}
<table class="tablelist">
    <thead>
        <tr>
            
            <th>序号<i class="sort"><img src="~/images/px.gif" /></i></th>
            <th>账号<i class="sort"><img src="~/images/px.gif" /></i></th>
            <th>真实名称</th>
            <th>联系方式</th>
            <th>身份证号</th>
            <th>所在分组</th>
            <th>创建时间</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mm in Model.List)
        {
            <tr>
               
                <td>@mm.ID</td>
                <td>@mm.UserName</td>
                <td>@mm.TrueName</td>
                <td>@mm.Phone</td>
                <td>@mm.CardNum</td>
                <td>@if (mm.DepartmentID==1) { 
                       <span style="color:#ff0000;font-weight:bold">A 组</span>
                    }
                    else
                    {
                        <span style="color: #1bba2d; font-weight: bold">B 组</span>
                    }
               </td>
                <td>@mm.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    @if (userType==0)
                    {
                         <a href="/user/edituser?id=@mm.ID" class="tablelink" title="编辑"><i class="iconfont">&#xf014f;</i>编辑</a>
                         <a onclick="$.del('/user/deluser?id=@mm.ID','/user/index')" class="tablelink" title="删除"><i class="iconfont">&#xf029a;</i>删除</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PageLinks(Model.Page, m => "$.getpage('" + Model.Page.ReturnUrl + "','','#list')")
<script type="text/javascript">
    $('.tablelist tbody tr:odd').addClass('odd');
</script>


   
