@model WebModel.User
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>无标题文档</title>
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/iconfont/css")
    @Scripts.Render("~/bundles/js")
</head>

<body>

    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="#">用户管理</a></li>
            <li><a href="#">设置</a></li>
        </ul>
    </div>
    <div class="formbody">
        <div class="formtitle"><span>用户基本信息</span></div>
        <form id="form1">
            <ul class="forminfo">
                @Html.Hidden("ID",Model.ID)
                <li><label>账号<b>*</b></label><input id="UserName" name="UserName" type="text" class="dfinput" tag="zhanghao" value="@Model.UserName" msg="账号" @(Model.ID != 0 ? Html.Raw("readonly='readonly'") : Html.Raw(""))=) /><i></i></li>
                @if (Model.ID==0) { 
                   <li><label>密码<b>*</b></label><input id="UserPassword" name="UserPassword" type="password" class="dfinput" tag="mima" msg="密码" /><i></i></li>
                }
                <li><label>真实姓名<b>*</b></label><input id="TrueName" name="TrueName" type="text" class="dfinput" tag="empty" value="@Model.TrueName" msg="真实姓名" /><i></i></li>
                <li>
                    <label>所在分组<b>*</b></label>
                    <div class="vocation">
                        @Html.DropDownList("DepartmentID", (List<SelectListItem>)ViewData["menuselect"], new { @class = "select1" })
                    </div>
                </li>
                <li><label>联系方式<b>*</b></label><input id="Phone" name="Phone" type="text" class="dfinput" tag="phone" value="@Model.Phone" msg="联系方式" /><i></i></li>
                <li><label>身份证号</label><input id="CardNum" name="CardNum" type="text" class="dfinput" msg="身份证号" value="@Model.CardNum" /><i></i></li>
                <li><label>&nbsp;</label><input name="" type="button" id="savebtn" class="btn" value="确认保存" /><input name="" type="button" onclick="javascript:history.go(-1)" class="btnfanhui" value="返回" /></li>
            </ul>
        </form>
    </div>
</body>

</html>
<script type="text/javascript">
$(document).ready(function() {
    $(".select1").uedSelect({
		width : 345
	});
    $("#savebtn").click(function () {
        var temp =escape($("#Remarkarea").val());
        $("#Remark").val(temp);
	    $.yanzheng("/user/edituserform", "#form1", "/user/index");
	})
});
</script>
